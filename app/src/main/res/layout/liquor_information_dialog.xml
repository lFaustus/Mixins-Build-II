<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              style="@style/liquor_dialog_ui">

    <View
        android:id="@+id/left_border"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#FF5252">

    </View>

    <RelativeLayout
        android:id="@+id/left_side_panel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/info_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/hello"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/right_hand_side"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/liquor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Title"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/liquor_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sample Description"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textSize="20sp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>