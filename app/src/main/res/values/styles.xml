<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fab_layout_wrap_width_wrap_height_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fab_action_button_base_style" parent="fab_layout_wrap_width_wrap_height_style" />
    <style name="fab_action_button_style" parent="fab_action_button_base_style">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <!--item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item-->
    </style>

    <style  name="mix_drinks_ui_button">
        <item name="android:background">@drawable/mix_drinks_ui_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
